body
  margin 0
.b-header
  position relative
  margin-left -100%
  &._open
    transition margin-top .2s ease
    margin-left 0
  &__wrapper
    height 100%
    width 100%
    box-sizing border-box
    padding 0
  &__menu-mobile-but
    cursor pointer
    align-items center
    justify-content center
    display flex
    width calc(100% - 40px)
    height 40px
    position absolute
    top 20px
    left 20px
    right 20px
    border 1px solid white
    z-index 10
    border-radius 10px
    color white
    transition  background.3s ease
    &:hover
      transition .2s ease
      background background #ffffff55
  &__menu-mobile
    transition  margin-left.3s ease
    margin-left -100%
    &._open
      margin-left 0
  &__item-container
    display none
    flex-direction column
    transition margin-top .3s ease
    height: 100vh
    justify-content space-around
  
  &__item
    font  600 21px/24px 'Open-Sans',sans-serif
    margin 0 22px 0 18px
    padding 10px 0
    cursor pointer
    transition color .3s ease
    &:hover
      color #6b6a6a
      transition color .2s ease
  &__search
    display none
  &__logo
    display none
.b-footer
  padding 22px 0 22px 0
  font  700 20px/20px 'Open-Sans',sans-serif
@media screen and (min-width: 1024px)
  .b-header
    position relative
    &__menu-mobile-but
      display none
    &__wrapper
      height 120px
      width 100%
      box-sizing border-box
      padding 36px 150px 0px 112px
    &__item-container
      margin-top: 0
      display flex
      justify-content flex-end
      flex-direction row
      position relative
      &:before
        content ''
        display block
        position absolute
        background url('../assets/logo.svg') no-repeat
        width 60px
        height 60px
        top 28px
        left 120px
    &__menu-close
      display none
    &__item
      font  600 21px/24px 'Open-Sans',sans-serif
      margin 0 22px 0 18px
      cursor pointer
      transition color .3s ease
      &:hover
        color #6b6a6a
        transition color .2s ease
    &__search
      display block
      cursor pointer
      position absolute
      background url('../assets/loupe.svg') no-repeat
      width 20px
      height 20px
      top 49px
      right 120px
    &__logo
      display block
      position absolute
      background url('../assets/logo.svg') no-repeat
      width 60px
      height 60px
      top 28px
      left 120px
  .b-footer
    padding 22px 0 22px 0
    font  700 20px/20px 'Open-Sans',sans-serif