
.button
  cursor pointer
  font  600 15px/18px 'Open-Sans',sans-serif
  background-color transparent
  border 3px solid white
  color white
  transition background-color .3s ease, border .3s ease
  &._active
    cursor pointer
    color white
    font  600 15px/18px 'Open-Sans',sans-serif
    background-color #008a7b
    border 3px solid #008a7b
    transition background-color .3s ease, border .3s ease
    &:hover
      transition background-color .2s ease, border .2s ease
      background-color #205f58!important
      border 3px solid #205f58!important
  &--green-border
    cursor pointer
    font  600 15px/18px 'Open-Sans',sans-serif
    background-color transparent
    color black
    transition background-color .3s ease, border .3s ease, color .3s ease
    border 3px solid #008a7b
    &:hover
      color white
      border 3px solid #008a7b!important
      background-color #008a7b!important
      transition background-color .2s ease, border .2s ease, color .2s ease
  &--form
    cursor pointer
    font  700 15px/18px 'Open-Sans',sans-serif
    background-color white
    transition background-color .3s ease, border .3s ease
    border none
    border-radius 10px
    &:hover
      transition background-color .2s ease
      background-color #008a7b!important
  &--black
    cursor pointer
    font  600 15px/18px 'Open-Sans',sans-serif
    background-color transparent
    color black
    border 3px solid black
  &--green
    cursor pointer
    color white
    font  600 15px/18px 'Open-Sans',sans-serif
    background-color #008a7b
    border 3px solid #008a7b
    transition background-color .3s ease, border .3s ease
    &:hover
      transition background-color .2s ease, border .2s ease
      background-color #205f58!important
      border 3px solid #205f58!important
  &:hover
    transition background-color .2s ease, border .2s ease
    background-color #ffffff50
    border 3px solid #ffffff50
